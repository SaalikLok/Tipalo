<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollViewID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.saaliklok.tipalo.input" >



    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleView"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:text="What's Your Bill?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billQuestion"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:textAlignment="center"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/billInitial"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:hint="in $$"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:text="Split Between..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splitBetween"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/numberPeople"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:hint="# of people"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:text="With this much love for your waiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loveWaiter"
        android:textSize="18sp"
        android:textColor="@color/textColor"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/tipPercent"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:hint="tip %"
        android:layout_gravity="center" />

    <Button
        android:text="Bill Me!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/button"
        android:layout_gravity="center"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalBillView"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/perPersonView"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tipAmountView"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tipPerPersonView"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <Button
        android:text="Finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finishButton"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>
